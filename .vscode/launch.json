    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'ord'",
            "cargo": {
                "args": [
                    "build",
                    // "--bin=ord",
                    // "--package=ord"
                ],
                "filter": {
                    "name": "ord",
                    "kind": "bin"
                }
            },
            "env": {
                "RUST_LOG": "info",
                "RUST_LOG_STYLE": "always",
            },
            "args": [
                "-r",
                "--config=data/ord.yaml",
                "--data-dir=data",
                "server",
                "--http-port=8080"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}